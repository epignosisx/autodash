@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<FluentValidation.Results.ValidationFailure[]>
@if (Model.Length > 0)
{
    <div class="validation-summary alert alert-danger">
        <h4>The following errors must be corrected:</h4>
        <ul>
            @foreach (var error in Model)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}